<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    android:layout_marginTop="@dimen/activity_vertical_margin">

    <LinearLayout
        android:id="@+id/contentCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dimen_8dp"
        android:paddingLeft="@dimen/dimen_8dp"
        android:paddingRight="@dimen/dimen_8dp"
        android:paddingTop="@dimen/dimen_8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/TextViewTitlePlateCard"
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_width="wrap_content"
                android:layout_marginRight="@dimen/dimen_8dp"
                android:layout_height="wrap_content"
                android:textColor="@color/design_default_color_primary"
                android:text="@string/plate"
                android:layout_marginEnd="@dimen/dimen_8dp" />

            <TextView
                android:id="@+id/TextViewPlateCard"
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="@color/design_default_color_primary"
                tool:text="Jhon doe" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/contentCarCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tool:ignore="UseCompoundDrawables">

            <ImageView
                android:id="@+id/imageCarCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/ic_vehicle_black_24dp"
                app:tint="@color/design_default_color_primary" />

            <TextView
                android:id="@+id/TextViewCarCard"
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/title_car" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/contentMotoCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/ic_moto_black_24dp"
                app:tint="@color/design_default_color_primary" />

            <TextView
                android:id="@+id/TextViewMotoCard"
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/title_motocycle" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/contentDateCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tool:ignore="UseCompoundDrawables">

            <ImageView
                android:id="@+id/imageDateCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/ic_calendar_today_24"
                app:tint="@color/design_default_color_primary" />

            <TextView
                android:id="@+id/TextViewDateCard"
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_width="wrap_content"
                android:layout_marginEnd="@dimen/dimen_8dp"
                android:layout_height="wrap_content"
                android:text="@string/date_input"
                android:layout_marginRight="@dimen/dimen_8dp" />

            <TextView
                android:id="@+id/TextViewDateTextCard"
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                tool:text="2021/07/30" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/contentBtnViewPost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/dimen_8dp"
            tool:ignore="RtlHardcoded">

            <Button
                android:id="@+id/btn_view_cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/design_default_color_primary_dark"
                android:text="@string/btn_coste"
                android:textStyle="bold"
                android:textColor="@color/white" />

        </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>